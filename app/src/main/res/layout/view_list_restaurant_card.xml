<?xml version="1.0" encoding="utf-8"?>
<com.example.brylee.zunbe.RestaurantCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="4dp"
    map:cardCornerRadius="2dp"
    map:cardElevation="2dp"
    map:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/listImageHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/listThumbnail"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <ImageView
                android:id="@+id/listRating"
                android:layout_width="75dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/listName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/listImageHolder"
            android:layout_toRightOf="@+id/listImageHolder"
            android:gravity="top"
            android:paddingLeft="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listCategories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listName"
            android:layout_toEndOf="@+id/listImageHolder"
            android:layout_toRightOf="@+id/listImageHolder"
            android:paddingLeft="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/listDeals"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listCategories"
            android:layout_toEndOf="@+id/listImageHolder"
            android:layout_toRightOf="@+id/listImageHolder"
            android:paddingLeft="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#66BB6A"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/listDistancePriceReviewCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDeals"
            android:layout_toEndOf="@+id/listImageHolder"
            android:layout_toRightOf="@+id/listImageHolder"
            android:paddingLeft="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

</com.example.brylee.zunbe.RestaurantCard>